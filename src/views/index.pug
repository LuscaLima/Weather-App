html(lang="en")

  include includes/head.pug
  include includes/section-title.pug

  body
    .overlay
      include includes/header.pug
      
      .content
        .row
          .col-6
            +title('⛅ Do a search!')

            form.content-form.d-flex
              input(type="text" placeholder="Somewhere in mind?").form-base#search
              button(title="Search" type="submit").form-button#go
                img(src="/icon/search-alt.svg" alt="Search icon")
              
            a(title="Use my place").form-place#place Get weather in my location 📍

          .col-6.d-flex
            .display
              .display-content
                h1.display-header City Name
                .display-date
                  - const d = new Date()
                  - const days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']

                  h3(title="Day of the week").dd-day #{days[d.getDay()]}
                  h4(title="Current date").dd-date #{d.toLocaleDateString()}
                  h4(title="Wind speed").dd-wind 🌀 Wind #[span];
                  h4(title="Humidity").dd-mois 💧 #[span]%
                .display-weather
                  img( alt="Weather representation").dd-img
                  h3.dd-weat &nbsp;
                  h4.dd-weatd &nbsp;
                .display-temp
                  h1.dd-temp #[span]°#[span]

              .display-fallback
                h1 No places searched yet

    include includes/footer.pug
    include includes/scripts.pug
    